{% extends "pokemon.html" %}
{% block pmmcontent %}
    <a href="/pokemon" class="btn btn-secondary">Search Again</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Moves of - {{mmpokemon[0].pokemon_name}}</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {% for item in mmpokemon %}
        <tr>
          <td>{{item.move_name}}</td>
          <td>{{item.pp}}
          <td>{{item.power}}
          <td><a href="/delete_move_from_pokemon/{{item.pokemon_id}}/{{item.move_id}}" class="btn btn-primary">Delete</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#addMoveToPokemonModal">Add Move to Pokemon</button>


    <!-- Add New Move to Pokemon Modal -->
    <div class="modal fade" id="addMoveToPokemonModal" tabindex="-1" role="dialog" aria-labelledby="addNewModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
            <h5 class="modal-title" id="addNewModalLabel">Add Move to Pokemon</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>

            <div class="modal-body">
                <form action="" method="POST">
                <div>
                    <label>Select Move</label><br>
                      <select class="form-control" name="move_dropdownInput" id="move_dropdownInput">
                        {% for move in moves %}
                            <option value="{{move.move_id}}">{{move.move_name}}</option>
                        {% endfor %}
                      </select>
                </div>
            </div>

            <div class="modal-footer">
            <button type="submit" value="addMoveToPoke" name="addMoveToPoke" class="btn btn-primary" formaction="/add_move_to_pokemon/{{poke_id}}">Add Move</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
        </div>
    </div>
  

{% endblock pmmcontent %}  