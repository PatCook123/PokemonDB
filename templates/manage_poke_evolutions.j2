{% extends "pokemon.html" %}
{% block pmecontent %}
    <a href="/pokemon" class="btn btn-secondary">Search Again</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Evolution of - {{mepokemon[0].pokemon_name}}</th>
          <th scope="col">Evolution Level</th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <td>{{mepokemon[0].evolv_name}}</td>
            <td>{{mepokemon[0].evolv_level}}</td>
        </tr>
      </tbody>
    </table>
    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#updateEvolvToPokemonModal">Change Pokemon Evolution</button>


    <!-- Change Evolution for Pokemon Modal -->
    <div class="modal fade" id="updateEvolvToPokemonModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
            <h5 class="modal-title" id="updateModalLabel">Add Evolution to Pokemon</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>

            <div class="modal-body">
                <form action="" method="POST">
                <div>
                    <label>Select Evolution</label><br>
                      <select class="form-control" name="evolv_dropdownInput" id="evolv_dropdownInput">
                        {% if mepokemon[0].evolv_name == None %}
                          <option value="">None</option>
                          {% for evolv in fullevolutions %}
                            <option value="{{evolv.evolv_id}}">{{evolv.evolv_name}}</option>
                          {% endfor %}
                        {% else %}
                          <option value="{{mepokemon[0].pokemon_evolutions_evolv_id}}">{{mepokemon[0].evolv_name}}</option>
                          {% for evolv in evolutions %}
                              <option value="{{evolv.evolv_id}}">{{evolv.evolv_name}}</option>
                          {% endfor %}
                            <option value="">None</option>
                        {% endif %}
                      </select>
                </div>
            </div>

            <div class="modal-footer">
            <button type="submit" value="updatePokeEvolv" name="updatePokeEvolv" class="btn btn-primary" formaction="/update_poke_evolv/{{poke_id}}">Change Evolution</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
        </div>
    </div>
  

{% endblock pmecontent %}