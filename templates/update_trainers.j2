{% extends "trainers.html" %}
{% block tucontent %}
<!-- form to edit data in gyms-->
<div>
<form id="updateTrainer" action="/update_trainer/{{u_trainer[0].trainer_id}}" method="post">
  <legend><strong>Update Trainer</strong></legend>
      <!-- Create hidden form input to store the passed values of the trainer we are editing -->
      <fieldset>
      <input type="hidden" value="{{u_trainer[0].trainer_id}}" class="form-control" id="trainer_id" name="trainer_id" required>
      <div class="form-group">
        <input type="text" id="first_name" name="first_name" value="{{u_trainer[0].first_name}}" class="form-control" required>
      </div>
      <div class="form-group">
        <input type="text" id="last_name" name="last_name" value="{{u_trainer[0].last_name}}" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" id="xp" name="xp" value="{{u_trainer[0].xp}}" class="form-control">
      </div>
      
      <div>
        <label>Select Gym</label><br>
        <select class="form-control" name="gym_id_dropdown" id="gym_id_dropdown">
          {% for gym in gyms %}
          <option value="{{gym.gym_id}}">{{gym.gym_name}}</option>
          {% endfor %}
          <option value="">None</option>
        </select>
      </div>
      
      
      <input type="submit" value="Update Trainer" name="Update_Trainer" class="btn btn-primary" style="margin:.5rem;">
      <a href="/trainers"><input class="btn" type="button" value="cancel"></a>
  </fieldset>
</form>
</div>

{% endblock tucontent %}  