{% extends "trainers.html" %}
{% block tucontent %}
<!-- form to edit data in trainers-->
<div>
<form id="updateTrainer" action="/update_trainer/{{u_trainer[0].trainer_id}}" method="post">
  <legend><strong>Update Trainer</strong></legend>
      <!-- Create hidden form input to store the passed id of the trainer we are editing -->
      <fieldset>
      <input type="hidden" value="{{u_trainer[0].trainer_id}}" class="form-control" id="trainer_id" name="trainer_id" required>
      <div class="form-group">
        <label>First Name</label>
        <input type="text" id="first_nameInput" name="first_nameInput" value="{{u_trainer[0].first_name}}" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Last Name</label>
        <input type="text" id="last_nameInput" name="last_nameInput" value="{{u_trainer[0].last_name}}" class="form-control">
      </div>
      <div class="form-group">
        <label>XP</label>
        <input type="text" id="xpInput" name="xpInput" value="{{u_trainer[0].xp}}" class="form-control">
      </div>
      
      <div>
        <label>Current Gym</label><br>
        <select class="form-control" name="gym_id_dropdownInput" id="gym_id_dropdownInput">
          <option value="{{u_trainer[0].gym_id}}">{{u_trainer[0].gym}}</option>
          {% for gym in gymsDropdown %}
            <option value="{{gym.gym_id}}">{{gym.gym_name}}</option>
          {% endfor %}
          <option value="">None</option>
        </select>
      </div>
      
      
      <input type="submit" value="Update Trainer" name="Update_Trainer" class="btn btn-primary" style="margin:.5rem;">
      <a href="/trainers"><input class="btn" type="button" value="cancel"></a>
  </fieldset>
</form>
</div>

{% endblock tucontent %}  